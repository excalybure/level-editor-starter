{
    "tasks": [
        {
            "type": "shell",
            "label": "CMake: Build All (Debug)",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/vs2022-x64",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "type": "shell",
            "label": "CMake: Build All (Release)",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/vs2022-x64",
                "--config",
                "Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "type": "shell",
            "label": "CMake: Clean",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/vs2022-x64",
                "--config",
                "Debug",
                "--target",
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CMake: Run Tests",
            "command": "${workspaceFolder}/build/vs2022-x64/Debug/math_tests.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "CMake: Build All (Debug)",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/experimental:module"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
