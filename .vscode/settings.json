{
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true,
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "clang-format.language.cpp.enable": true,
    "clang-format.language.cpp.style": "file",
    "clang-format.assumeFilename": "${workspaceFolder}/.clang-format",
    "clang-format.executable": "C:\\Program Files\\LLVM\\bin\\clang-format.exe",
    "chat.tools.terminal.autoApprove": {
        "rm": true,
        "rmdir": false,
        "del": false,
        "kill": false,
        "curl": false,
        "wget": false,
        "eval": false,
        "chmod": false,
        "chown": false,
        "git": true,
        "cmake": true,
        "ctest//b": true,
        "ls": true,
        "tree": true,
        ".\\.*\\math_tests.exe\\b/i": true,
        "/^Remove-Item\\b/i": true,
        "/^Get-ChildItem\\b/i": true,
        "/^Move-ChildItem\\b/i": true
    },
    "files.associations": {
        "xutility": "cpp",
        "random": "cpp",
        "complex": "cpp",
        "valarray": "cpp",
        "utility": "cpp"
    }
}
